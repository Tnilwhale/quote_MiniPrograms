.banner{
  display: flex;
  flex-direction: row;
  align-self: center;
  /* margin-top: 50rpx; */
  width: 100%;
}

.banner_bg{
  display: relative;
  flex-direction: column;
  align-items: center;
  height: 100rpx;
}

.banner_bg::after{
  content: '';
  width: 120%;
  height: 300rpx;
  position: absolute;
  z-index: -1;
  left: -10%;
  top: 0;
  border-radius: 0 0 50% 50%;
  background: linear-gradient(160deg,#3396fa, #3396fa);
}

.banner_box{
  width: 100%;
  margin:20rpx 0 15px 0;
  padding: 0 25rpx;
}

.banner_swiper{
  width: 100%;
  height: 300rpx;
  overflow: hidden;
  border-radius: 20rpx;
}

.slide-img{
  width: 100%;
  height: 300rpx;
  display: block;
  border-radius: 20rpx;
}

swiper .wx-swiper-dots .wx-swiper-dot{
  width: 35rpx;
  height: 5rpx;
  border-radius: 4rpx;
}


