/* pages/product_category/product_category.wxss */
.line{
  width: 1rpx;
  height: 100vh;
  background-color: lightgray;
}
.line_row{
  width: 100%;
  height: 1rpx;
  background-color: lightgray;
}

.category{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 100vh;
  align-items: center;
  align-self: center;
  justify-content: space-between;
}
.category_left{
  display: flex;
  width: 30%;
  height: 100vh;
  flex-direction: column;
  align-items: center;
  align-self: center;
  font-size: 25rpx;
}
.category_left_1{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 180rpx;
  align-items: center;
  align-self: center;
  justify-content: center;
}

.category_left_1.active{
  background: #fff;  
  color: #3396fa;
  font-weight: 500; 
}


/* 商品 */
.category_right{
  display: flex;
  width: 70%;
  height: 100vh;
  background-color: #fff;
}

.category_right_1{
  display: flex;
  flex-direction: row;
  width: 95%;
  align-self: center;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.category_right_1_1{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-self: center;
  align-items: center;
  font-size: 20rpx;
}

.category_right_1_1_1{
  display: flex;
  flex-direction: column;
  width: 80%;
}

.category_right_title{
  padding-left: 20rpx;
  font-size: 20rpx;
}

.category_right_bottom{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-self: center;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: red;
}


.category_right_1::before{
  border: solid 10px #3396fa;
}
