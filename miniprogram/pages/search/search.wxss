/* pages/search/search.wxss */

.search_bg{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: #3396fa;
}
.search{
  width: 80%;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  border: 1rpx solid rgb(230, 239, 248);
  border-radius: 40rpx;
  margin-top: 20rpx;
  padding-left: 50rpx;
  padding-right: 50rpx;
  align-items: center;
  align-self: center;
  justify-content: center;
  background-color: rgb(247, 248, 250);
  z-index: 999;
  color: rgb(200, 201, 204);
  font-size: 28rpx;
}

/* 商品 */
.category_right{
  display: flex;
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.category_right_1{
  display: flex;
  flex-direction: row;
  width: 95%;
  align-self: center;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 10rpx;
  margin-top: 10rpx;
}
.category_right_1_1{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-self: center;
  align-items: center;
  font-size: 20rpx;
}

.category_right_1_1_1{
  display: flex;
  flex-direction: column;
  width: 80%;
}

.category_right_title{
  padding-left: 20rpx;
  font-size: 20rpx;
}

.category_right_bottom{
  display: flex;
  flex-direction: row;
  width: 100%;
  align-self: center;
  align-items: center;
  justify-content: space-between;
  padding-left: 20rpx;
  font-size: 22rpx;
  font-weight: 500;
  color: red;
}


.category_right_1::before{
  border: solid 10px #3396fa;
}
